<!DOCTYPE html>
<html xmlns:fb="http://ogp.me/ns/fb#">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Club Epika{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/epikaclub/css/style.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/epikaclub/css/prettyPhoto.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/epikaclub/css/validationEngine.jquery.css') }}" type="text/css" />
        {% endblock %}
        {% block javascripts %}
    		<script type="text/javascript" src="{{ asset('bundles/epikaclub/js/slider/jquery.js') }}"></script>
    		<script type="text/javascript" src="{{ asset('bundles/epikaclub/js/slider/jquery.carouFredSel-4.5.1-packed.js') }}"></script>
    		<script type="text/javascript" src="{{ asset('bundles/epikaclub/js/slider/jquery.carouFredSel-4.5.1.js') }}"></script>
    		<script type="text/javascript" src="{{ asset('bundles/epikaclub/js/slider/jquery.easing.1.3.js') }}"></script>
    		<script type="text/javascript">
				$(document).ready(function() {

					$('#sliderList').carouFredSel({
						scroll: {
							easing:'easeInOutExpo',
								duration: 1000
							},
							circular:true,
							prev: '#sliderBackLink',
							next: '#sliderNextLink',
							items: {
								visible: 1,
								width: 990,
								height:'auto'
							},
							auto:{
								play: true,
								pauseDuration: 5000
						}
					});


					$('.recentWorksList').carouFredSel({
						scroll: {
						duration: 1000,
						easing:'easeInOutExpo',
						items:1
						},
						circular:true,
						prev: '.recentWorksBackLink',
						next: '.recentWorksNextLink',
						auto: false,
						items: {
						visible: 4
						}
					});

					$('#miCuenta').mouseover(function() {
						$('#loginDiv').css('display','block');
						});
					$('#miCuenta').mouseout(function() {
						$('#loginDiv').css('display','none');
						});
					$('#loginDiv').mouseover(function() {
						$('#loginDiv').css('display','block');
						});
					$('#loginDiv').mouseout(function() {
						$('#loginDiv').css('display','none');
						});
					$('#cerrar').click(function() {
						$('#loginDiv').css('display','none');
						});

				});
			</script>
    	{% endblock %}
        <link rel="shortcut icon" href="{{ asset('clubfavicon.ico') }}" />
    </head>
    <body>
    <!-- FB SHIT ! -->
    <div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
    
    <!-- END FB SHIT! -->

       <!-- BEGIN #divMain -->
	<div id="divMain">

		<!-- BEGIN #divHeader -->
    	<div id="divHeader">

			<!-- BEGIN #divLogo -->
            <div id="divLogo">
                <a href="{{ path('default_index') }}" ><img src="{{ asset('bundles/epikaclub/images/header.png') }}"/></a>
			<!-- END #divLogo -->
            </div>

            

			<!-- BEGIN #divMainMenu -->
            <div id="divMainMenu" class="menu-header">
            	{% block menu %}
            	<div class="topMenu">
            	<ul>
                    <li><a id="miCuenta" href="#"><img style="opacity: 1.0 !important;" src="{{ asset('bundles/epikaclub/images/micuenta.png') }}" width="120" /></a></li>
                    <li><a href="{{ path('afiliado_new') }}"><img style="opacity: 1.0 !important;" src="{{ asset('bundles/epikaclub/images/registrate.png') }}" width="120" /></a></li>
                </ul>
                </div>
                <div id="loginDiv" style="position: absolute; top: 56px; left: -202px; display:none;">
                	<table class="loginTable" border="0">
                		<tr>
                			<td style="background: url({{ asset('bundles/epikaclub/images/barramicuenta.png') }}); width: 45px; height: 238px;">
                				<div id="clearfix" style="width:45px; height:238px;"></div>
                			</td>
                			<td style="background: 5% 0% url({{ asset('bundles/epikaclub/images/barracentral.png') }}); width: 295px; height: 238px;">
                				<table width="295" height="238">
                					<tr height="10%"><td></td></tr>
                					<tr height="15%">
                						<td width="7%">&nbsp;</td>
                						<td align="left" colspan="2"><img src="{{ asset('bundles/epikaclub/images/usuario.png') }}" /></td>
                						<td></td>
                					</tr>
                					<tr height="15%">
                						<td width="7%">&nbsp;</td>
                						<td align="left" colspan="2"><input type="text" name="login" placeholder="Nombre de Usuario" /></td>
                						<td width="7%"><div id="loginError"></div></td>
                					</tr>
                					<tr height="15%">
                						<td width="7%">&nbsp;</td>
                						<td align="left" colspan="2"><img src="{{ asset('bundles/epikaclub/images/contrasena.png') }}" /></td>
                						<td></td>
                					</tr>
                					<tr height="15%">
                						<td width="7%">&nbsp;</td>
                						<td align="left" colspan="2"><input type="password" name="password" placeholder="Tú Contraseña" /></td>
                						<td width="7%"><div id="passwordError"></div></td>
                					</tr>
                					<tr>
                						<td width="7%">&nbsp;</td>
                						<td align="left">
                							<input type="checkbox" name="rememberme" value="true" />
                							<img src="{{ asset('bundles/epikaclub/images/recordarme.png') }}" />
                						</td>
                						<td align="left">
                							<a href="#">
                								<img src="{{ asset('bundles/epikaclub/images/entrar.png') }}" />
                							</a>
                						</td>
                						<td width="7%"></td>
                					</tr>
                				</table>
                			</td>
                			<td style="background: url({{ asset('bundles/epikaclub/images/barraderecha.png') }}); width: 149px; height: 238px;">
                				<table width="149" height="238">
                					<tr height="25%">
                						<td align="right" style="padding-right: 10px;">
                							<a id="cerrar" href="#">
                								<img src="{{ asset('bundles/epikaclub/images/cerrar.png') }}" />
                							</a>
                						</td>
                					</tr>
                					<tr height="15%">
                						<td align="right"></td>
                					</tr>
                					<tr height="15%">
                						<td align="right"></td>
                					</tr>
                					<tr height="15%">
                						<td align="left">
                							<a href="#">
                								<img src="{{ asset('bundles/epikaclub/images/recordarcontra.png') }}" />
                							</a>
                						</td>
                					</tr>
                					<tr>
                						<td align="right"></td>
                					</tr>
                				</table>
                			</td>
                		</tr>
                	</table>
                </div>
                {% endblock %}
			<!-- END #divMainMenu -->
            </div>

		<!-- END #divHeader -->
        </div>
        <br /><br />
        <!-- BEGIN #divMenuBar -->
        <div id="divMenuBar">
				<ul>
					<li><a href="{{ path('category') }}"><span>Categorias</span></a></li>
            		<li><a href="{{ path('bono') }}"><span>Bonos</span></a></li>
            		<li><a href="#"><span> ¿ Cómo funciona ?</span></a></li>
            		<li><a href="#"><span> Contactenos</span></a></li>
            	</ul>
            <div id="divSearch">
            	<input type="text" size="30" id="indexSearch" name="indexSearch" />
            	<a href="#"><img alt="" title="Buscar" src="{{ asset('bundles/epikaclub/images/lupa.png') }}" /></a>
            </div>
        </div>
        <!-- END #divMenuBar -->
        
		{% block body %}


        {% endblock %}
        
		<!-- BEGIN #divFooter -->
		<div id="divFooter">

			<!-- BEGIN #divFooterLogoAndCopyright -->
            <div id="divFooterLogoAndCopyright">

				<!-- BEGIN #divFooterLogoAndTagline -->
            	<div id="divFooterLogoAndTagline">
                    <div id="divFooterLogo">Epika Marketing</div>
                    <div id="divFooterTagline"></div>
				<!-- END #divFooterLogoAndTagline -->
            	</div>
                
				<!-- BEGIN #divFooterCopyrightAndThemeBy -->
                <div id="divFooterCopyrightAndThemeBy">
                    <div id="divCopyright">
                        &copy; Copyright 2012. Powered by <a href="http://www.symfony.com/" target="_blank">
                        <img alt="" src="{{ asset('bundles/epikaclub/images/sf_black.png') }}" width="90" height="30" /></a>
                    </div>
                    <div id="divThemeBy">
                        <a href="http://www.clubepika.com" target="_blank"></a>
                    </div>
				<!-- END #divFooterCopyrightAndThemeBy -->
            	</div>

			<!-- END #divFooterLogoAndCopyright -->
            </div>

		<!-- END #divFooter -->
        </div>
        
	<!-- END #divMain -->     
	</div>
       

       
    <!-- END body -->
    </body>
</html>