{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block body %}
<h1>Company list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Nit</th>
            <th>Address</th>
            <th>Neighborhood</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Cellphone</th>
            <th>Category</th>
            <th>City</th>
            <th>Contacto</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.nit }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.neighborhood }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.cellphone }}</td>
            <td>{{ entity.category }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.contacto }}</td>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('company_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('company_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('company_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}