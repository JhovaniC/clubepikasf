{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block contenido_title %}Afiliado{% endblock %}
{% block contenido %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Identification</th>
            <th>Name</th>
            <th>Last_name</th>
            <th>Phone</th>
            <th>Cellphone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('afiliado_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.identification }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.lastname }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.cellphone }}</td>
            <td>{{ entity.email }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('afiliado_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('afiliado_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('afiliado_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
{% block sidebar %}{% endblock %}