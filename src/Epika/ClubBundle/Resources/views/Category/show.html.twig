{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block contenido_title %}Categoria{% endblock %}
{% block contenido %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Categoria</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Bonos</th>
            <td>
            	<ul>
            		{% for bono in entity.bonos %}
            		<li>{{ bono.name }}</li>
            		{% endfor %}
            	</ul>
            </td>
        </tr>
        <tr>
            <th>Compa√±ias</th>
            <td>
            	<ul>
            		{% for company in entity.companies %}
            		<li>{{ company.name }}</li>
            		{% endfor %}
            	</ul>
            </td>
        </tr>
        <tr>
            <th>Creado</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Actualizado</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            Volver
        </a>
    </li>
    <li>
        <a href="{{ path('category_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}