{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block contenido_title %}Membresia{% endblock %}
{% block contenido %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Membresia</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Precio</th>
            <td>{{ entity.price }}</td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>{{ entity.quantity }}</td>
        </tr>
        <tr>
            <th>Bonos</th>
            <td>
            	<ul>
            	{% for bono in entity.bonos %}
            		<li>{{ bono.name }}</li>
            	{% endfor %}
            	</ul>
            </td>
        </tr>
        <tr>
            <th>Creado</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Actualizado</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('membresia') }}">
            Volver
        </a>
    </li>
    <li>
        <a href="{{ path('membresia_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('membresia_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}