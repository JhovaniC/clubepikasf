{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block contenido_title %}Editar Bono{% endblock %}
{% block contenido %}

<form action="{{ path('bono_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('bono') }}">
            Volver
        </a>
    </li>
    <li>
        <form action="{{ path('bono_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}