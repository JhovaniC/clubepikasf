{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block body %}
<h1>Bono list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Long_description</th>
            <th>Information</th>
            <th>Conditions</th>
            <th>Image</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Save</th>
            <th>Type</th>
            <th>Unpublish_date</th>
            <th>Is_active</th>
            <th>Category</th>
            <th>Company</th>
            <th>Membership</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('bono_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.longdescription }}</td>
            <td>{{ entity.information }}</td>
            <td>{{ entity.conditions }}</td>
            <td>{{ entity.image }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.discount }}</td>
            <td>{{ entity.save }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.unpublishdate|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.isactive }}</td>
            <td>{{ entity.category }}</td>
            <td>{{ entity.company }}</td>
            <td>{{ entity.membership }}</td>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('bono_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bono_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('bono_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}

