{% extends 'EpikaClubBundle::layout.html.twig' %}
{% block contenido_title %}Bono list{% endblock %}
{% block contenido %}
<table class="records_list">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Descuento</th>
            <th>Ahorro</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.discount }}</td>
            <td>{{ entity.save }}</td>
            <td>{{ entity.isactive }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('bono_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('bono_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('bono_new') }}">
            Nuevo Bono
        </a>
    </li>
</ul>
{% endblock %}